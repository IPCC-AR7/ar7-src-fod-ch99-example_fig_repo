{
  "$defs": {
    "Authors": {
      "description": "Model for author information for figures.",
      "properties": {
        "name": {
          "title": "Name of the author",
          "type": "string"
        },
        "orcid": {
          "description": "A stable, public identifier for a researcher from https://orcid.com",
          "pattern": "^\\d{4}-\\d{4}-\\d{4}-\\d{3}(\\d|X)$",
          "title": "ORCID",
          "type": "string"
        }
      },
      "required": [
        "name",
        "orcid"
      ],
      "title": "Authors",
      "type": "object"
    },
    "Datasets": {
      "description": "Model for dataset information used in figures.",
      "properties": {
        "name": {
          "title": "Name",
          "type": "string"
        },
        "path": {
          "format": "directory-path",
          "title": "Path",
          "type": "string"
        },
        "doi": {
          "default": null,
          "description": "A unique identifier for a dataset",
          "pattern": "^10\\.\\d{4,9}/[-._;()/:A-Z0-9]+$",
          "title": "Digital Object Identifier",
          "type": "string"
        }
      },
      "required": [
        "name",
        "path"
      ],
      "title": "Datasets",
      "type": "object"
    }
  },
  "description": "Model for figure repository info.yml file.",
  "properties": {
    "title": {
      "title": "Title",
      "type": "string"
    },
    "caption": {
      "title": "Caption",
      "type": "string"
    },
    "authors": {
      "items": {
        "$ref": "#/$defs/Authors"
      },
      "minItems": 1,
      "title": "Authors",
      "type": "array"
    },
    "software": {
      "title": "Software",
      "type": "string"
    },
    "datasets": {
      "items": {
        "$ref": "#/$defs/Datasets"
      },
      "title": "Datasets",
      "type": "array"
    }
  },
  "required": [
    "title",
    "caption",
    "authors",
    "software",
    "datasets"
  ],
  "title": "Info",
  "type": "object"
}
